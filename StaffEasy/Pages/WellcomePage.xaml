<Page x:Class="StaffEasy.Pages.WellcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StaffEasy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WellcomePage">

    <Border Background="#B2DFDB" CornerRadius="20" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <!-- Заголовок: Добро пожаловать -->
            <TextBlock Text="Добро пожаловать в StaffEasy" FontSize="32" FontWeight="Bold" Margin="0,20,0,0" TextAlignment="Center" Foreground="#37474F" TextWrapping="Wrap" MinWidth="200" MinHeight="65"/>

            <!-- Текст: Начните с выбора вкладки в левом меню -->
            <TextBlock Text="Для начала работы выберите вкладку в левом меню" FontSize="20" Margin="0,0,0,10" TextAlignment="Center" Foreground="#37474F" TextWrapping="Wrap" MinWidth="200" MinHeight="50"/>

            <!-- Изображение: Логотип -->
            <Image Source="/Resources/Logo.png" Width="150" Height="150" Margin="20"/>
        </StackPanel>
    </Border>
</Page>
